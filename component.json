{
    "title": "AzureStack Azure Bridge Client (azurestack-Product)",
    "docsUrl": "",
    "url": "https://api.apis.guru/v2/specs/azure.com/azurestack-Product/2017-06-01/swagger.json",
    "envVars": {
        "OAUTH_CLIENT_ID": {
            "description": "OAuth Client ID"
        },
        "OAUTH_CLIENT_SECRET": {
            "description": "OAuth Client Secret"
        }
    },
    "credentials": {
        "fields": {
            "server": {
                "label": "Server",
                "viewClass": "SelectView",
                "model": [
                    "https://management.azure.com/",
                    "--- Custom URL"
                ],
                "required": true
            },
            "otherServer": {
                "label": "Custom Server URL",
                "viewClass": "TextFieldView"
            },
            "oauth2": {
                "label": "Authorization uses an Azure Active Directory OAuth2 flow.",
                "viewClass": "OAuthFieldView"
            }
        },
        "oauth2": {
            "client_id": "{{OAUTH_CLIENT_ID}}",
            "client_secret": "{{OAUTH_CLIENT_SECRET}}",
            "auth_uri": "https://login.microsoftonline.com/common/oauth2/authorize",
            "token_uri": "https://login.microsoftonline.com/common/oauth2/token",
            "scopes": [
                "user_impersonation"
            ]
        }
    },
    "triggers": {
        "startFlow": {
            "main": "./lib/triggers/startFlow.js",
            "type": "polling",
            "title": "Start Flow",
            "fields": {}
        }
    },
    "actions": {
        "Products_List": {
            "main": "./lib/actions/Products_List.js",
            "title": "Returns a list of products.",
            "description": "Returns a list of products.",
            "fields": {
                "verbose": {
                    "viewClass": "CheckBoxView",
                    "label": "Debug this step (log more data)"
                }
            },
            "metadata": {
                "in": "./lib/schemas/Products_List.in.json",
                "out": {
                    "type": "object"
                }
            }
        },
        "Products_Get": {
            "main": "./lib/actions/Products_Get.js",
            "title": "Returns the specified product.",
            "description": "Returns the specified product.",
            "fields": {
                "verbose": {
                    "viewClass": "CheckBoxView",
                    "label": "Debug this step (log more data)"
                }
            },
            "metadata": {
                "in": "./lib/schemas/Products_Get.in.json",
                "out": {
                    "type": "object"
                }
            }
        },
        "Products_ListDetails": {
            "main": "./lib/actions/Products_ListDetails.js",
            "title": "Returns the extended properties of a product.",
            "description": "Returns the extended properties of a product.",
            "fields": {
                "verbose": {
                    "viewClass": "CheckBoxView",
                    "label": "Debug this step (log more data)"
                }
            },
            "metadata": {
                "in": "./lib/schemas/Products_ListDetails.in.json",
                "out": {
                    "type": "object"
                }
            }
        }
    }
}